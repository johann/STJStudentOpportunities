<%= simple_form_for(@scholarship) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :org %>
    <%= f.input :schol %>
    <%= f.input :descrip %>
    <%= f.input :gpa %>
    <%= f.input :infourl %>
    <%= f.input :appyurl %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
